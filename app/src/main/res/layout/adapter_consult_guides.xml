<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="src.Activities.ui.consult_contacts.ConsultContactsFragment">

    <components.Accordion.AccordionView
        android:id="@+id/accordion_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:heading="@string/app_name"
        app:isAnimated="false"
        app:isExpanded="false"
        app:isPartitioned="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:autoLink="email"
                android:text="@string/app_name" />

        </LinearLayout>


    </components.Accordion.AccordionView>
</androidx.constraintlayout.widget.ConstraintLayout>
